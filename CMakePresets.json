{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 21, "patch": 0 },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build in build/cmake-build-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "cmake/Toolchain-HomebrewLLVM.cmake"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build in build/cmake-build-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/cmake-build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "cmake/Toolchain-HomebrewLLVM.cmake"
      }
    }
  ],
  "buildPresets": [
    { "name": "debug",   "configurePreset": "debug" },
    { "name": "release", "configurePreset": "release" }
  ],
  "testPresets": [
    { "name": "debug",   "configurePreset": "debug" },
    { "name": "release", "configurePreset": "release" }
  ]
}

